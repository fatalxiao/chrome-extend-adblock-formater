{
	"name": "AdBlock Formater",
	"version": "2.0",
	"description": "A Chrome extend to format adblock custom list.",
	"icons": {
		"128": "icons/icon128.png",
		"16": "icons/icon16.png",
		"48": "icons/icon48.png"
	},
	"manifest_version": 2,
	"background": {
		"scripts": [
			"background/background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"19": "icons/icon19.png",
			"38": "icons/icon38.png"
		},
		"default_title": "Adblock Formater 2.0"
	},
	"permissions": [
		"tabs"
	]
}
